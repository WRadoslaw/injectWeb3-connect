{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/no-explicit-any": "on",
        "no-console": "error",
        "no-redeclare": "off",
        "no-unused-vars": "off",
        "semi": ["error", "never"],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ]
    }
}
